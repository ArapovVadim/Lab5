<html>
    <head>
        <script src = "dom_utils.js"> </script>
        <script>
           function clr(){
               var calcPlace = document.getElementById ("calculator");
               while (calcPlace.firstChild !=null) {
                   calcPlace.removeChild(calcPlace.firstChild);
               }
           } 
           function add(element){
               document.getElementById('calculator').appendChild(element);
           }
           function createSimple() {
               add(text("id_n1"));
               add(select("id_oper", new Array("+", "-", "/","*","mod"))); 
               add(text("id_n2"));
               add(button("=",calculateResult));
               add(text("id_result"));
           }
           function createPercent() {
               add(label("РЎСѓРјРјР° РІРєР»Р°РґР°: "));
               add(text("id_summa"));
               add(br());
               add(label("РЎСЂРѕРє РІРєР»Р°РґР° (Р»РµС‚): "));
               add(number("id_strok"));
               add(br());
               add(label("РџСЂРѕС†РµРЅС‚РЅР°СЏ СЃС‚Р°РІРєР° (РіРѕРґРѕРІС‹С…): "));
               add(number("id_procent"));
               add(br());
               add(button("Р Р°СЃСЃС‡РёС‚Р°С‚СЊ", calculatePercent));
               add(br());
               add(label("Р”РѕС…РѕРґ: "));
               add(text("id_dohod"));
               }
            function calculatePercent(){
                var s = document.getElementById("id_summa").value;
                var t = document.getElementById("id_strok").value;
                var p = document.getElementById("id_procent").value;
                document.getElementById('id_dohod').value = 0.01*s*p*t;
            }
            function calculateResult () {
                var n1 = parseFloat (document.getElementById("id_n1").value);
                var n2 = parseFloat (document.getElementById("id_n2").value);
                var oper = document.getElementById("id_oper").value;
                if (oper == "+"){
                    result = n1 + n2;
                } 
                else if (oper == "-")  {
                    result = n1-n2;
                }
                else if (oper == "/")  {
                    result = n1/n2;
                }
                else if (oper == "*")  {
                    result = n1*n2;
                }
                else  {
                    result = n1%n2;
                }
                
                document.getElementById("id_result").value = result;
            }
        </script>
    </head>
    <body onload = "createSimple ()">
        
        <div id = "selector">
            <input type= "radio" name="calculatorType" checked onclick="clr();createSimple()"/>
            РћР±С‹С‡РЅС‹Р№ РєР°Р»СЊРєСѓР»СЏС‚РѕСЂ <br>
            <input type= "radio" name="calculatorType" onclick="clr();createPercent()"/>
            РџСЂРѕС†РµРЅС‚РЅС‹Р№ РєР°Р»СЊРєСѓР»СЏС‚РѕСЂ <br>
        </div>
        <br>
        <div id= "calculator">
        </div>
    </body>

</html>
